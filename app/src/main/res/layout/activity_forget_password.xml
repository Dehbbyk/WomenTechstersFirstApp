<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity"
    android:padding="30dp">

    <ImageView
        android:id="@+id/pic_2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/pass_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgotten Password?"
        app:layout_constraintTop_toBottomOf="@id/pic_2"
        android:layout_marginTop="40dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Email Address connected to your account to receive a link to reset your password."
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:layout_margin="20sp"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/txt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email:"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/txt_0"
        android:layout_marginTop="40dp"
        android:paddingBottom="20dp"/>
    <Button
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:backgroundTint="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40sp"/>

    <LinearLayout
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/con">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?  "
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/register_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="20sp"
            android:textColor="#E91E63"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>